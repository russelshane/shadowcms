{
  "name": "@shadowcms/api",
  "version": "0.4.12",
  "description": "Node and GraphQL API for ShadowCMS",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "dev": "nodemon dist/index.js",
    "dev:ts": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "start:ts": "ts-node src/index.ts",
    "format": "prettier --write ./src/",
    "lint": "eslint --fix --ext .jsx,.js,.tsx,.ts ./src/",
    "clean": "rm dist/",
    "gcp-build": "tsc -p .",
    "prepare": "npm run gcp-build",
    "pretest": "npm run gcp-build"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^8.0.29",
    "@types/pino": "^6.3.11",
    "@types/pino-pretty": "^4.7.1",
    "@types/reflect-metadata": "^0.1.0",
    "nodemon": "^2.0.13",
    "ts-node": "3.3.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "apollo-server-express": "^3.4.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "jsonwebtoken": "^8.5.1",
    "micro-memoize": "^4.0.9",
    "nanoid": "^3.1.30",
    "pg": "^8.4.0",
    "pino": "^7.0.3",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.10",
    "type-graphql": "^1.1.1",
    "typeorm": "0.2.38"
  }
}
