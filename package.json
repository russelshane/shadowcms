{
  "name": "@shadowcms/shadowcms",
  "version": "2.1.1",
  "private": true,
  "author": {
    "name": "Shadow CMS",
    "email": "hello@shadowcms.com",
    "url": "https://shadowcms.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shadowcms/shadow.git"
  },
  "workspaces": [
    "api",
    "websockets",
    "client",
    "web"
  ],
  "keywords": [
    "shadow",
    "cms",
    "newsroom",
    "journalism",
    "news"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "yarn api:lint",
    "test": "yarn api:test",
    "api:test": "yarn workspace api test",
    "api:lint": "eslint --fix --ext .jsx,.js,.tsx,.ts ./api/",
    "api:dev": "yarn workspace api dev",
    "api:watch": "yarn workspace api watch",
    "api:build": "yarn workspace api build",
    "client:lint": "eslint --fix --ext .jsx,.js,.tsx,.ts ./client/",
    "client:dev": "yarn workspace client dev",
    "client:build": "yarn workspace client build",
    "client:test": "yarn workspace client test",
    "socket:build": "yarn workspace websockets build",
    "socket:watch": "yarn workspace websockets watch",
    "socket:start": "yarn workspace websockets start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "api/**/*.{tsx,ts}": "eslint --cache --fix ",
    "client/**/*.{tsx,ts}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "^6.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2"
  }
}
